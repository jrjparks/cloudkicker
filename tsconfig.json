{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2015"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "mocha", "chai", "sinon"],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
  "files": [
    "src/index.ts",
    "src/options.ts",
    "src/response.ts"
  ]
}
